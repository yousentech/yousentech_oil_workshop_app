<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="yuvo_custom_field_view" model="ir.ui.view">
            <field name="name">Show Item Cost In invoice</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form" />
            <field name="arch" type="xml">
            
                <xpath expr="//group[@id='header_left_group']" position="inside">
                    <field name="attention" />
                    <field name="job_name" />
                    <field name="job" />
                    <field name="job_return" />
                    <field name="inv_remark" />
                      <field name="inv_ref" />

                </xpath>
               
            </field>
        </record>
    </data>
</odoo>